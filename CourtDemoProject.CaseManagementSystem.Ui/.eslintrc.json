{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"standard",
		"plugin:react/recommended"
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"plugins": [
		"react"
	],
	"rules": {
		"indent": [ "error", "tab" ],
		"no-tabs": "off",
		"no-unused-vars": "off",
		"react/jsx-uses-react": "off",
		"react/react-in-jsx-scope": "off",
		"multiline-ternary": "off"
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	}
}
